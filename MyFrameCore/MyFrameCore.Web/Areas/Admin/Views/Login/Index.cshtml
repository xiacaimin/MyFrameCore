<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta http-equiv="Pragma" content="no-cache">
    <meta http-equiv="Cache-Control" content="no-cache">
    <meta http-equiv="Expires" content="0">
    <title>后台登录</title>
    <link rel="icon" href="/Content/Image/monkey-48.ico">
    <link href="~/Content/Login/css/login.css" rel="stylesheet" />
</head>
<body>

    <div class="login">
        <div class="message">我的框架-管理登录</div>
        <div id="darkbannerwrap"></div>
        <input name="action" value="login" type="hidden">
        <input name="Account" placeholder="用户名" required="" type="text">
        <hr class="hr15">
        <input name="PassWord" placeholder="密码" required="" type="password">
        <hr class="hr15">
        <input value="登 录" style="width:100%;" type="button">
        <hr class="hr20">
        <!-- 帮助 <a onClick="alert('请联系管理员')">忘记密码</a> -->

        <div id="laberror" class="redfont"></div>

    </div>


</body>
</html>
<script src="~/Script/jquery-1.10.2.min.js"></script>
<script type="text/javascript">
    $(function () {
        //检测IE
        if (navigator.appName == "Microsoft Internet Explorer" && (navigator.userAgent.indexOf("MSIE 6.0") > -1 || navigator.userAgent.indexOf("MSIE 7.0") > -1 || navigator.userAgent.indexOf("MSIE 8.0") > -1)) {
            window.location.href = '/Admin/Login/UpgradeBrowser';
        }
        document.onkeydown = function (event) {
            var e = event || window.event || arguments.callee.caller.arguments[0];
            if (e && e.keyCode == 13) {
                $("input[type='button']").click();
            }
        };
        //防止内层iframe出现登录页面
        if (window != top) {
            top.location.href = location.href;
        }
        $("input[type='button']").click(function () {
            if ($("input[name='Account']").val() == "") {
                //jeBox.msg('用户名不能为空', {
                //    icon: 2,
                //    time: 3
                //});
                ShowErrorMsg("用户名不能为空");
                return;
            }
            if ($("input[name='PassWord']").val() == "") {
                //jeBox.msg('密码不能为空', {
                //    icon: 2,
                //    time: 1
                //});
                ShowErrorMsg("密码不能为空");
                return;
            }

            $.post("/Admin/Login/CheckLogin", {
                Account: $("input[name='Account']").val(),
                PassWord: $("input[name='PassWord']").val()
            },
            function (data) {
                

                if (data.Result) {
                    location.href = "/Admin/Main";
                }
                else {
                    //jeBox.msg('用户名或密码错误', {
                    //    icon: 5,
                    //    time: 1
                    //});
                    ShowErrorMsg("用户名或密码错误");
                }
            });
        });

    });


    function ShowErrorMsg(msg) {
        $("#laberror").text(msg);
        setTimeout(function () { $("#laberror").text(""); }, 1500);
    }
</script>